          ;;
        surface)
          LAYER_FLAG="surface"
          ;;  
        syn)
          REG_TYPE="--syn"
          ;;                  
        tc)
          use_constr="--tc"
          ;;
        take-avg-tr)
          PROT_FLAG="--take-avg-tr"
          ;;
        transpose)
          TRANS_FLAG="--transpose"
          ;;
