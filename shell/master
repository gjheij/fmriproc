          ;;
        ups)
          UPs="--ups"
          ;;
        v1)
          lbl_flag="--v1"
          ;;
        v2)
          lbl_flag="--v2"
          ;;
        verbose)
          verb_flag="--verbose"
          ;;
        warp-only)
          WARP_ONLY="--warp-only"
          ;;
        xopts-clean)
          XOPTS_="--xopts-clean"
          ;;
        xopts-overwrite)
          XOPTS_="--xopts-overwrite"
