if [[ -z $(echo ${BASH}) ]]; then
  echo "Make sure \"bash\" >v4.0 is installed"
  echo
  print_line -
  print_error_msg "$(basename ${0})" "bash" "Make sure \"bash\" >v4.0 is installed"
  exit 1
fi

