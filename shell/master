    "${SUBJECT}"
    "${SESSION}"
    "${VERT}"
    "${FREEVIEW}"
    "${OW}"
    "${FULL_OW}"
    "${lbl_flag}"
    "${MODEL_FLAG}"
    "${SRF_FLAG}"
    "${SRF_FILE}"
    "${EPI_FILE}"
    "${GALLERY_FLAG}"
    "${aparc_flag}"
    "${SELECTION_FLAG}"
    "${MAN_EPI}"
    "${EPI_FILE}"
    "${LS_SES}"
    "${skip_prf_info}"
